{
    "name":  "HaGeZi's Light DNS Blocklist",
    "description":  "Hand brush - Cleans the Internet and protects your privacy! Blocks Ads, Tracking, Metrics and some Badware.",
    "homepage":  "https://github.com/hagezi/dns-blocklists",
    "tags":  [
                 "ads, trackers, malware"
             ],
    "mainMirror":  "https://cdn.jsdelivr.net/gh/hagezi/dns-blocklists@latest/hosts/light.txt",
    "alternativeMirrors":  [
        "https://gitlab.com/hagezi/mirror/-/raw/main/dns-blocklists/hosts/light.txt",
        "https://codeberg.org/hagezi/mirror2/raw/branch/main/dns-blocklists/hosts/light.txt"
                           ],
    "detectionMethods":  {
                             "version":  {
                                             "patterns":  [
                                                              "^#?\\s*(?:Version|Ver):\\s*(.*)$"
                                                          ],
                                             "priority":  7,
                                             "type":  "text-locate"
                                         },
                             "description":  {
                                                 "patterns":  [
                                                                  "^#?\\s*(?:Description|Desc):\\s*(.*)$"
                                                              ],
                                                 "priority":  2,
                                                 "type":  "text-locate"
                                             },
                             "lastModified":  {
                                                  "patterns":  [
                                                                   "^#?\\s*(?:Last modified|Modified|Updated):\\s*(.*)$"
                                                               ],
                                                  "priority":  6,
                                                  "type":  "text-locate"
                                              },
                             "homepage":  {
                                              "patterns":  [
                                                               "^#?\\s*(?:Homepage|URL):\\s*(.*)$"
                                                           ],
                                              "priority":  3,
                                              "type":  "text-locate"
                                          },
                             "expiry":  {
                                            "patterns":  [
                                                             "^#?\\s*(?:Expires?|Expiry|Expiration):\\s*(.*)$"
                                                         ],
                                            "priority":  5,
                                            "type":  "text-locate"
                                        },
                             "title":  {
                                           "patterns":  [
                                                            "^#?\\s*(?:Title|Name):\\s*(.*)$"
                                                        ],
                                           "priority":  1,
                                           "type":  "text-locate"
                                       },
                             "license":  {
                                             "patterns":  [
                                                              "^#?\\s*(?:License|Lic):\\s*(.*)$"
                                                          ],
                                             "priority":  4,
                                             "type":  "text-locate"
                                         }
                         }
}
